{
  "name": "jest-testing-by-sample",
  "version": "1.0.0",
  "description": "Learn testing by sample using Jest, each of the samples contains a readme.md file that indicates the purpose of the sample plus an step by step guide to reproduce it.",
  "main": "index.js",
  "scripts": {
    "start": "env-cmd .env if-env NODE_ENV=production && npm run start:prod || npm run start:dev",
    "start:dev": "env-cmd .env cross-env NODE_ENV=development webpack-dev-server --config ./config/webpack/app/dev.js",
    "start:prod": "env-cmd .env cross-env NODE_ENV=production webpack-dev-server --config ./config/webpack/app/prod.js",
    "build": "env-cmd .env if-env NODE_ENV=production && npm run build:prod || npm run build:dev",
    "build:dev": "rimraf dist && env-cmd .env cross-env NODE_ENV=development webpack --config ./config/webpack/app/dev.js",
    "build:prod": "rimraf dist && env-cmd .env cross-env NODE_ENV=production webpack -p --config ./config/webpack/app/prod.js",
    "test": "jest -c ./config/test/jest.json --verbose",
    "test:coverage": "jest -c ./config/test/jest.json --verbose --coverage",
    "test:watch": "jest -c ./config/test/jest.json --verbose --watchAll -i"
  },
  "author": "Lemoncode",
  "license": "MIT",
  "dependencies": {
    "babel-polyfill": "^6.26.0",
    "bootstrap": "^4.1.1",
    "lc-form-validation": "^1.0.0",
    "react": "^16.3.2",
    "react-dom": "^16.3.2",
    "react-hot-loader": "^3.1.3",
    "react-redux": "^5.0.7",
    "react-router": "^3.2.1",
    "redux": "^4.0.0",
    "redux-thunk": "^2.2.0",
    "whatwg-fetch": "^2.0.4"
  },
  "devDependencies": {
    "@types/deep-freeze": "^0.1.1",
    "@types/enzyme": "^3.1.10",
    "@types/jest": "^22.2.3",
    "@types/node": "^8.10.11",
    "@types/react": "^16.3.13",
    "@types/react-dom": "^16.0.5",
    "@types/react-hot-loader": "^3.0.6",
    "@types/react-redux": "^5.0.19",
    "@types/react-router": "^3.0.15",
    "@types/redux-mock-store": "0.0.13",
    "@types/webpack-env": "^1.13.6",
    "awesome-typescript-loader": "^4.0.1",
    "babel-core": "^6.26.3",
    "babel-preset-env": "^1.6.1",
    "cross-env": "^5.1.4",
    "css-loader": "^0.28.11",
    "deep-freeze": "0.0.1",
    "env-cmd": "^7.0.0",
    "enzyme": "^3.3.0",
    "enzyme-adapter-react-16": "^1.1.1",
    "enzyme-to-json": "^3.3.3",
    "extract-text-webpack-plugin": "^3.0.2",
    "file-loader": "^1.1.11",
    "html-webpack-plugin": "^3.2.0",
    "identity-obj-proxy": "^3.0.0",
    "if-env": "^1.0.4",
    "jest": "^22.4.3",
    "node-sass": "^4.9.0",
    "raf": "^3.4.0",
    "redux-mock-store": "1.4.0",
    "rimraf": "^2.6.2",
    "sass-loader": "^6.0.7",
    "style-loader": "^0.21.0",
    "ts-jest": "^22.4.5",
    "tslint": "^5.9.1",
    "tslint-loader": "^3.6.0",
    "tslint-react": "^3.5.1",
    "typescript": "^2.8.3",
    "url-loader": "^1.0.1",
    "webpack": "^3.11.0",
    "webpack-dev-server": "^2.11.2",
    "webpack-merge": "^4.1.2"
  }
}
